<div class="max-w-6xl mx-auto">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-2">
      <%= t('kudos.application_name') %>ダッシュボード
    </h1>
    <p class="text-gray-600">
      <%= current_user.email %>さん、おかえりなさい！
    </p>
    <p class="text-gray-600">
      <%= current_user.organization.name %>に所属中
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- 統計カード -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-blue-900 mb-2">送信した感謝</h3>
      <p class="text-3xl font-bold text-blue-600">0件</p>
      <p class="text-sm text-blue-700 mt-1">今月の送信数</p>
    </div>

    <div class="bg-green-50 border border-green-200 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-green-900 mb-2">受信した感謝</h3>
      <p class="text-3xl font-bold text-green-600">0件</p>
      <p class="text-sm text-green-700 mt-1">今月の受信数</p>
    </div>

    <div class="bg-purple-50 border border-purple-200 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-purple-900 mb-2">いいね数</h3>
      <p class="text-3xl font-bold text-purple-600">0件</p>
      <p class="text-sm text-purple-700 mt-1">もらったいいね</p>
    </div>
  </div>

  <!-- アクションボタン -->
  <div class="mt-8 text-center">
    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg mr-4">
      感謝を送る
    </button>
    <%= link_to "ログアウト", destroy_user_session_path,
        data: { turbo_method: :delete },
        class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-3 px-6 rounded-lg" %>
  </div>
</div>

<div class="flex items-start gap-3">
  <!-- アバター -->
  <div class="flex items-center justify-center w-12 h-12 rounded-full bg-blue-600 text-white font-semibold text-base flex-shrink-0">
    <%= appreciation.sender.last_name[0] %>
  </div>

  <!-- コンテンツ -->
  <div class="flex-1 min-w-0">
    <!-- ヘッダー -->
    <div class="mb-2">
      <span class="font-semibold text-gray-900"><%= appreciation.sender.full_name %></span>
      <span class="text-gray-600 mx-1">さんが</span>
      <span class="font-semibold text-gray-900"><%= appreciation.receiver.full_name %></span>
      <span class="text-gray-600 mx-1">さんにKudosを送りました</span>
    </div>

    <div class="text-sm text-gray-500 mb-3">
      <%= time_ago_in_words(appreciation.created_at) %>前
    </div>

    <!-- メッセージカード -->
    <div class="border-l-4 border-blue-600 bg-gray-50 rounded-r-lg p-4">
      <div class="text-sm font-semibold text-blue-700 mb-2">
        <%= I18n.t("activerecord.attributes.appreciation.categories.#{appreciation.category}") %>
      </div>
      <% if appreciation.message.present? %>
        <p class="text-gray-900 leading-relaxed">
          <%= appreciation.message %>
        </p>
      <% end %>
    </div>
  </div>
</div>
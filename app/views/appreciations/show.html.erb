<div class="max-w-3xl mx-auto">
  <div class="mb-6">
    <%= link_to appreciations_path, class: "text-sm text-gray-600 hover:text-gray-900 flex items-center gap-1" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="m15 18-6-6 6-6"/>
      </svg>
      タイムラインに戻る
    <% end %>
  </div>

  <div class="bg-white border border-gray-200 rounded-xl p-8 shadow-sm">
    <div class="flex items-start gap-6 mb-6">
      <!-- アバター -->
      <div class="flex items-center justify-center w-16 h-16 rounded-full bg-gray-200 text-gray-700 font-semibold text-xl flex-shrink-0">
        <%= @appreciation.sender.last_name[0] %>
      </div>

      <!-- ヘッダー情報 -->
      <div class="flex-1">
        <h1 class="text-2xl font-bold text-gray-900 mb-2"><%= @appreciation.sender.full_name %></h1>
        <div class="flex items-center gap-3 flex-wrap">
          <span class="px-3 py-1 rounded-md text-sm font-medium bg-blue-100 text-blue-700">
            <%= I18n.t("activerecord.attributes.appreciation.categories.#{@appreciation.category}") %>
          </span>
          <span class="text-sm text-gray-600">
            <%= @appreciation.sender.office&.name %> - <%= @appreciation.sender.department&.name %> - <%= @appreciation.sender.section&.name %>
          </span>
        </div>
      </div>
    </div>

    <!-- 送信先 -->
    <div class="mb-6 p-4 bg-gray-50 rounded-lg">
      <div class="text-sm text-gray-600 mb-1">送信先</div>
      <div class="font-semibold text-gray-900">
        <%= @appreciation.receiver.full_name %>
        <span class="text-sm text-gray-600 font-normal ml-2">
          <%= @appreciation.receiver.office&.name %> - <%= @appreciation.receiver.department&.name %> - <%= @appreciation.receiver.section&.name %>
        </span>
      </div>
    </div>

    <!-- メッセージ -->
    <% if @appreciation.message.present? %>
      <div class="mb-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-3">メッセージ</h2>
        <p class="text-gray-900 leading-relaxed whitespace-pre-wrap">
          <%= @appreciation.message %>
        </p>
      </div>
    <% end %>

    <!-- フッター -->
    <div class="pt-6 border-t border-gray-200">
      <span class="text-sm text-gray-500">
        <%= @appreciation.created_at.strftime('%Y年%m月%d日 %H:%M') %>に送信
      </span>
    </div>
  </div>
</div>
<div class="bg-white border border-gray-200 shadow-sm rounded-xl p-6" data-appreciation-form data-first-office-id="<%= offices.first&.id %>">
  <%= form_with model: appreciation, class: "space-y-6" do |f| %>
    <% if appreciation.errors.any? %>
      <div class="p-4 bg-red-50 border border-red-200 rounded-lg">
        <h3 class="font-medium text-red-800 mb-2">エラーがあります</h3>
        <ul class="text-sm text-red-700 space-y-1">
          <% appreciation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- 事業所選択 -->
    <div class="space-y-3">
      <label class="text-sm font-semibold text-gray-900">事業所を選択</label>
      <div class="flex flex-wrap gap-2" id="office-buttons">
        <% offices.each_with_index do |office, index| %>
          <button
            type="button"
            data-office-id="<%= office.id %>"
            class="flex items-center gap-2 px-4 py-2 rounded-lg border-2 transition-all duration-200 <%= index == 0 ? 'border-blue-600 bg-blue-50 text-blue-700' : 'border-gray-200 bg-white text-gray-700' %>">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect width="16" height="20" x="4" y="2" rx="2" ry="2"/><path d="M9 22v-4h6v4"/><path d="M8 6h.01"/><path d="M16 6h.01"/><path d="M12 6h.01"/><path d="M12 10h.01"/><path d="M12 14h.01"/><path d="M16 10h.01"/><path d="M16 14h.01"/><path d="M8 10h.01"/><path d="M8 14h.01"/>
            </svg>
            <span class="text-sm font-medium"><%= office.name %></span>
          </button>
        <% end %>
      </div>
    </div>

    <!-- 受信者選択 -->
    <div class="space-y-3">
      <label class="text-sm font-semibold text-gray-900">誰に送りますか？</label>

      <!-- 選択済み表示 -->
      <div id="selected-display" class="hidden p-3 bg-blue-50 border border-blue-200 rounded-lg" style="display: none;">
        <div class="flex items-center gap-3">
          <div id="selected-avatar" class="flex items-center justify-center w-8 h-8 rounded-full bg-blue-600 text-white font-semibold text-sm"></div>
          <div class="flex-1">
            <div id="selected-name" class="font-medium text-gray-900"></div>
            <div id="selected-location" class="text-xs text-gray-600"></div>
          </div>
          <button type="button" id="change-btn" class="text-xs px-3 py-1.5 hover:bg-blue-100 rounded-md text-gray-700">変更</button>
        </div>
      </div>

      <!-- 選択エリア -->
      <div id="selection-area" class="space-y-2">
        <% offices.each_with_index do |office, office_index| %>
          <div data-office="<%= office.id %>" class="<%= 'hidden' unless office_index == 0 %>">
            <% office.departments.each do |dept| %>
              <% users_count = dept.sections.sum { |s| s.users.where.not(id: current_user.id).count } %>
              <% next if users_count == 0 %>

              <div class="border border-gray-200 rounded-lg overflow-hidden mb-2">
                <button type="button" data-dept="<%= dept.id %>" class="w-full flex items-center justify-between p-3 bg-gray-50 hover:bg-gray-100 text-left">
                  <div class="flex items-center gap-3">
                    <span class="px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800"><%= dept.name %></span>
                    <span class="text-sm text-gray-600"><%= users_count %>名</span>
                  </div>
                  <svg class="w-4 h-4 text-gray-600 transition-transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="m6 9 6 6 6-6"/>
                  </svg>
                </button>

                <div data-dept-content="<%= dept.id %>" class="hidden">
                  <% dept.sections.each do |section| %>
                    <% users = section.users.where.not(id: current_user.id) %>
                    <% next if users.empty? %>

                    <div class="border-t border-gray-200">
                      <button type="button" data-section="<%= section.id %>" class="w-full flex items-center justify-between p-3 pl-6 bg-gray-50/50 hover:bg-gray-100/50 text-left">
                        <div class="flex items-center gap-3">
                          <span class="text-sm font-medium text-gray-900"><%= section.name %></span>
                          <span class="text-xs text-gray-600"><%= users.count %>名</span>
                        </div>
                        <svg class="w-3 h-3 text-gray-600 transition-transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="m6 9 6 6 6-6"/>
                        </svg>
                      </button>

                      <div data-section-content="<%= section.id %>" class="hidden p-4 pl-6 bg-white">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                          <% users.each do |user| %>
                            <button
                              type="button"
                              class="user-btn flex items-center gap-3 p-3 rounded-md border border-gray-200 hover:bg-gray-50 hover:border-gray-300 text-left transition-all"
                              data-user-id="<%= user.id %>"
                              data-name="<%= user.full_name %>"
                              data-avatar="<%= user.last_name[0] %>"
                              data-location="<%= "#{office.name} - #{dept.name} - #{section.name}" %>">
                              <div class="flex items-center justify-center w-9 h-9 rounded-full bg-gray-200 text-gray-700 font-semibold text-sm">
                                <%= user.last_name[0] %>
                              </div>
                              <span class="text-sm font-medium text-gray-900 truncate"><%= user.full_name %></span>
                            </button>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <%= f.hidden_field :receiver_id, id: "receiver_id" %>
    </div>

    <!-- カテゴリ選択 -->
    <div class="space-y-3">
      <label class="text-sm font-semibold text-gray-900">どんなKudosを送りますか？</label>
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-3">
        <% Appreciation.categories.keys.each do |cat| %>
          <button
            type="button"
            data-category="<%= cat %>"
            class="category-btn flex items-center justify-center p-4 rounded-lg border border-gray-200 bg-white hover:bg-gray-50 text-gray-900 transition-all">
            <span class="text-sm font-medium"><%= I18n.t("activerecord.attributes.appreciation.categories.#{cat}") %></span>
          </button>
        <% end %>
      </div>
      <%= f.hidden_field :category, id: "category" %>
    </div>

    <!-- メッセージ -->
    <div class="space-y-3">
      <label class="text-sm font-semibold text-gray-900">メッセージ（任意）</label>
      <%= f.text_area :message, placeholder: "感謝の気持ちを伝えましょう...", rows: 4,
          class: "min-h-[100px] w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none" %>
    </div>

    <!-- ボタン -->
    <div class="flex justify-end gap-3">
      <%= link_to "キャンセル", root_path, class: "px-4 py-2 rounded-md border border-gray-300 text-sm font-medium text-gray-700 hover:bg-gray-50" %>
      <%= f.submit "Kudosを送る", class: "px-4 py-2 rounded-md bg-blue-600 text-white text-sm font-medium hover:bg-blue-700 cursor-pointer" %>
    </div>
  <% end %>
</div>